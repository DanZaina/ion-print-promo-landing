---
import { Image } from "astro:assets";
import backgroundImage from "../assets/ion-logo-soup.jpg";
import logoWhite from "../assets/logo-stacked-white.png";
import CanadaIcon from "../assets/canada.svg";

interface Props {}
---

<section class="hero-section" aria-labelledby="moved-title">
  <!-- Background image with overlay -->
  <div class="absolute inset-0 -z-10">
    <Image
      src={backgroundImage}
      alt="ION Print & Promo workspace"
      class="size-full object-cover"
      loading="eager"
      decoding="async"
    />
    <!-- Dark overlay for text contrast -->
    <div class="hero-overlay"></div>
  </div>

  <!-- Main content container -->
  <div class="hero-content">
    <!-- Logo -->
    <div class="logo">
      <Image
        src={logoWhite}
        alt="ION Print & Promo Logo"
        loading="eager"
        decoding="async"
      />
    </div>

    <!-- Main heading with gradient -->
    <h1 id="moved-title">
      ION Print & Promo <br> is here!
    </h1>

    <!-- Subtitle with new location information -->
    <p>
      Our name and location may have changed, but our staffing, commitment to quality and great service remains the same.
    </p>

    <!-- Call-to-action buttons -->
    <div class="button-group">
      <a
        href="https://www.ionprintandpromo.ca/"
        class="btn-primary"
        rel="noopener noreferrer"
        target="_blank"
      >
        Visit Our New Site
      </a>
      <a href="tel:+7057391969" class="btn-ghost">
        Call Us Today!
      </a>
    </div>

    <!-- Footer with Canadian flag and copyright -->
    <footer class="hero-footer">
      <div class="copyright">
        <Image src={CanadaIcon} alt="Canada" />
        <span>Â© 2025 ION Print & Promo | Proudly local & 100% Canadian owned!</span>
      </div>
    </footer>
  </div>
</section>